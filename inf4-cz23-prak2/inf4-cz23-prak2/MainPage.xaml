<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="inf4_cz23_prak2.MainPage">

    <StackLayout Margin="20">
        <Label Text="Właściwości czcionki" BackgroundColor="#558B2F" TextColor="White" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Fill" />
        <Label Text="Rozmiar: " x:Name="sliderSize" FontSize="Medium" HorizontalOptions="Fill" />
        <Slider Minimum="0" Maximum="40" x:Name="slider" ValueChanged="slider_ValueChanged" />
        <Label Text="Dzień dobry" x:Name="response" />
        <Button Text=">>" BackgroundColor="#558B2F" TextColor="White" HorizontalOptions="Center" Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>

